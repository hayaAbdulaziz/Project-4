
<%=form_with model:@exercise, local: true do |form| %>
    <div class="form-group">
    <label for="exampleFormControlInput1">Exercise Name </label>
    <input type="text" class="form-control"<%=form.text_field :name %> 
    </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Exercise Explain </label>
    <input type="text" class="form-control" <%=form.text_area :explain %>
    </div>
    <div class="form-group">
    <label for="exampleFormControlInput1">Exercise Img </label>
    <input type="text" class="form-control"<%=form.text_field :img %>
    </div>
    <button type="button" class="btn btn-light"><%= form.submit %></button>
    <% end %>